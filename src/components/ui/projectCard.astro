---
import type { CollectionEntry } from "astro:content";
interface Props {
  project: CollectionEntry<"projects">;
}
const { title, description, image, imageAlt } = Astro.props.project["data"];
---

<div>
  <img
    src={image}
    alt={imageAlt}
    class="max-h-[486px] w-full rounded-3xl object-cover"
  />
  <div class="mt-6 space-y-2">
    <h2 class="font-satoshi text-h4">{title}</h2>
    <p>{description}</p>
  </div>
</div>
