---
import ContactForm from "@/components/ContactForm.astro";
import FAQ from "@/components/FAQ.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout namespace="contact" title="contact">
  <section class="section pt-10">
    <div class="container">
      <div class="items-end justify-between xl:flex">
        <h1 class="split-lines text-heading text-left">Contact</h1>
        <div class="text-primary mt-10 max-w-xs text-xl xl:mt-0">
          <p class="split-lines">Interested in working with me?</p>
          <p class="split-lines">
            Submit your project inquiry using the form below
          </p>
        </div>
      </div>
      <ContactForm />
    </div>
  </section>

  <FAQ />
</Layout>
