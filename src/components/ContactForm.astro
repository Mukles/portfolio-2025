<form class="section contact-form max-w-[800px] space-y-17.5">
  <div class="form-group radio-group">
    <p class="font-satoshi text-h4">Project type</p>
    <div class="mt-3 flex space-x-6">
      <label class="flex-1">
        <input
          class="peer hidden"
          type="radio"
          name="projectType"
          required
          value="website"
        />
        <span>Website</span>
      </label>
      <label class="flex-1">
        <input
          class="peer hidden"
          type="radio"
          name="projectType"
          required
          value="webapp"
        />
        <span>Webapp</span>
      </label>

      <label class="flex-1">
        <input
          class="peer hidden"
          type="radio"
          name="projectType"
          required
          value="other"
        />
        <span>Other</span>
      </label>
    </div>
  </div>

  <div class="form-group radio-group">
    <p class="font-satoshi text-h4">Interested in...</p>
    <div class="mt-3 flex space-x-6">
      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="design"
        />
        <span>Design</span>
      </label>
      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="development"
        />
        <span>Development</span>
      </label>
      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="design & dev"
        />
        <span>Design & Dev</span>
      </label>
    </div>
  </div>

  <div class="form-group radio-group">
    <p class="font-satoshi text-h4">Project budget (USD)</p>
    <div class="mt-3 flex space-x-6">
      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="Less than 2k"
        />
        <span> &lt; 2k </span>
      </label>
      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="2-5k"
        />
        <span> 2-5k</span>
      </label>

      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="5-10k"
        />
        <span>5-10k</span>
      </label>

      <label class="flex-1">
        <input
          class="hidden"
          type="radio"
          name="project"
          required
          value="More than 10k"
        />
        <span> &gt; 10k</span>
      </label>
    </div>
  </div>

  <div class="form-group space-y-13">
    <div class="input-group">
      <label class="relative block">
        <input type="text" name="name" placeholder=" " required />
        <span>Your name</span>
      </label>
    </div>

    <div class="input-group">
      <label class="relative block">
        <input type="email" name="name" placeholder=" " required />
        <span>Your email</span>
      </label>
    </div>

    <div class="input-group">
      <label class="relative block">
        <textarea
          name="about the project"
          class="min-h-28"
          rows="3"
          placeholder=""
          required></textarea>
        <span>Tell me about your project</span>
      </label>
    </div>
  </div>
</form>
