---
import { cn } from "@/lib/utils";
import { cva, type VariantProps } from "class-variance-authority";

export const buttonVariants = cva(
  "inline-flex space-x-2 px-4 text-primary font-medium py-3 no-underline capitalize transition duration-500 ease-in-out rounded-full",
  {
    variants: {
      variant: {
        default: "bg-primary",
        primary: "bg-primary",
        secondary: "bg-secondary",
        warning: "bg-warning",
        danger: "bg-danger",
      },
      size: {
        sm: "text-sm",
        md: "text-base",
        lg: "text-xl px-7 py-5",
      },
    },
    defaultVariants: {
      variant: "default",
      size: "md",
    },
  }
);

interface Props extends VariantProps<typeof buttonVariants> {
  class?: string;
  href?: string;
}

const {
  variant = "default",
  size = "md",
  class: className = "",
  href,
  ...props
} = Astro.props as Props;

const Tag = href ? "a" : "button";
---

<Tag
  href={href}
  class={cn(buttonVariants({ variant, size }), className)}
  {...props}
>
  <slot />
</Tag>
